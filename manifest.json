{
    "name": "LeetCode Tracker",
    "version": "1.0",
    "description": "Track LeetCode problems you struggled with an get reminded to redo them! ",
    "permissions": ["activeTab", "declarativeContent", "background"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
      "page_action": {
        "default_popup": "popup.html"
      },
    "manifest_version": 2
  }